# Schwab Portfolio API (Accounts & Trading)
SCHWAB_INTEL_APP_KEY=your-app-key-here
SCHWAB_INTEL_CLIENT_SECRET=your-secret-here
SCHWAB_INTEL_CALLBACK_URL=https://127.0.0.1:8001

# Schwab Market Data API (Quotes, VIX, Sectors)
SCHWAB_MARKET_APP_KEY=your-market-app-key-here
SCHWAB_MARKET_CLIENT_SECRET=your-market-secret-here
SCHWAB_MARKET_CALLBACK_URL=https://127.0.0.1:8002

# CLI defaults
SCHWAB_OUTPUT=text
SCHWAB_DEFAULT_ACCOUNT=your-account-alias

# Optional data directory (defaults to ~/.schwab-cli-tools)
SCHWAB_CLI_DATA_DIR=~/.schwab-cli-tools

# Optional token paths (override default data dir)
SCHWAB_TOKEN_PATH=
SCHWAB_MARKET_TOKEN_PATH=
